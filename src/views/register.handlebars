<div class='hero-image'>
  <div class='hero-text'>
    <h1>Registrar usuario</h1>
    <form onsubmit='send(event)'>
      <input id='form-name' type='text' name='form-name' placeholder='Nombre' />
      <input
        id='form-last-name'
        type='text'
        name='form-last-name'
        placeholder='Apellido'
      />
      <input
        id='form-email'
        type='text'
        name='form-email'
        placeholder='email'
      />

      <input type='submit' value='Guardar Usuario' />
    </form>
    <p id='usuario-id'></p>
  </div>
</div>
<script src='js/register.js'></script>